{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "main.c",
                "stringfuncs/stringv.c",
                "-I",
                "stringfuncs",
                "-o",
                "main"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build the active C file"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./main",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}